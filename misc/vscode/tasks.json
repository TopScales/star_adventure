{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Custom Editor",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source"
            }
        },
        {
            "label": "Build Custom Editor (DEBUG)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                // enable for debugging with breakpoints
                "dev_build=yes"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source"
            }
        },
        {
            "label": "Build Android (ARM32 Release)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "platform=android",
                "target=template_release",
                "arch=arm32"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source",
                "env": {
                    "ANDROID_HOME": "C:\\cmdline-tools"
                }
            }
        },
        {
            "label": "Build Android (ARM64 Release)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "platform=android",
                "target=template_release",
                "arch=arm64",
                "generate_android_binaries=yes"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source",
                "env": {
                    "ANDROID_HOME": "C:\\cmdline-tools"
                }
            }
        },
        {
            "label": "Build Android (ARM32 Debug)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "platform=android",
                "target=template_debug",
                "arch=arm32"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source",
                "env": {
                    "ANDROID_HOME": "C:\\cmdline-tools"
                }
            }
        },
        {
            "label": "Build Android (ARM64 Debug)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "platform=android",
                "target=template_debug",
                "arch=arm64",
                "generate_android_binaries=yes"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source",
                "env": {
                    "ANDROID_HOME": "C:\\cmdline-tools"
                }
            }
        },
        {
            "label": "Build Android (ARM32 Dev)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "platform=android",
                "target=template_debug",
                "arch=arm32",
                "dev_build=yes",
                "debug_symbols=yes"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source",
                "env": {
                    "ANDROID_HOME": "C:\\cmdline-tools"
                }
            }
        },
        {
            "label": "Build Android (ARM64 Dev)",
            "type": "shell",
            "command": "scons",
            "args": [
                "-j24",
                "platform=android",
                "target=template_debug",
                "arch=arm64",
                "dev_build=yes",
                "debug_symbols=yes",
                "generate_android_binaries=yes"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/godot/source",
                "env": {
                    "ANDROID_HOME": "C:\\cmdline-tools"
                }
            }
        },
        {
            "label": "Build Android (All)",
            "type": "shell",
            "command": "echo 'All tasks finished'",
            "problemMatcher": [],
            "dependsOn": [
                "Build Android (ARM32 Release)",
                "Build Android (ARM64 Release)",
                "Build Android (ARM32 Debug)",
                "Build Android (ARM64 Debug)",
                "Build Android (ARM32 Dev)",
                "Build Android (ARM64 Dev)"
            ],
            "dependsOrder": "sequence",
            "group": "build"
        },
        {
            "label": "Clean Android",
            "type": "shell",
            "command": "${workspaceFolder}/platform/android/java/gradlew clean",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}